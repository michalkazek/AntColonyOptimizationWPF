<Page x:Class="AntColonyOptimizationWPF.RunPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AntColonyOptimizationWPF"
      mc:Ignorable="d" 
      d:DesignHeight="470" d:DesignWidth="590"
      Title="RunPage">

    <Grid>
        <TextBlock x:Name="txtIntroduction" TextAlignment="Center" HorizontalAlignment="Left" Margin="45,30,0,0" TextWrapping="Wrap" Text="Postęp działania algorytmu" VerticalAlignment="Top" Height="40" Width="500" FontSize="30"/>
        <Label x:Name="lblCurrentProgress" HorizontalAlignment="Left" Margin="45,134,0,0" VerticalAlignment="Top" Height="35" Width="150" FontSize="18" Content="Aktualna iteracja:"/>
        <TextBlock x:Name="txtCurrentPartialProgress" TextAlignment="Right" HorizontalAlignment="Left" Margin="195,139,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="30" Width="60" FontSize="18"/>
        <TextBlock x:Name="txtMaxPartialProgress" HorizontalAlignment="Left" Margin="255,139,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="30" Width="100" FontSize="18" RenderTransformOrigin="0.136,0.444"/>
        <ProgressBar x:Name="prgCurrentTask" HorizontalAlignment="Left" Height="41" Margin="45,174,0,0" VerticalAlignment="Top" Width="487"/>
        <Button x:Name="btnStart" Content="Button" HorizontalAlignment="Left" Margin="174,370,0,0" VerticalAlignment="Top" Width="247" Height="56" Click="btnStart_Click"/>
    </Grid>
</Page>
